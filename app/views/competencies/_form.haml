= form_for ([@profile, @profile.competencies.build]) do |f|
  %h3 Add Competency
  .span-5
    Name
  %br
  .span-18
    = f.text_field :name, :size => 20
  %hr.space
  .span-5
    Rating
  %br
  .span-18
    = f.select :rating, ["Beginner", "Intermediate", "Expert"], :prompt => "Rating:"
  %hr.space
  .span-5
    Description
  %br
  .span-18.last
    = f.text_area :description, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-2.prepend-6
    = f.submit 'add'
   
