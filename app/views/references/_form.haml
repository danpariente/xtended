= form_for ([@profile, @profile.references.build]) do |f|
  %h3 Please make sure your references are aware of you utilizing them. Seek their permission first.
  .span-5
    Name
  %br
  .span-18
    = f.text_field :name, :size => 30
  %hr.space
  .span-5
    Relationship
  %br
  .span-18
    = f.text_field :relationship, :size => 30
  %hr.space
  %h3 Contact
  .span-5
    Email
  %br
  .span-18
    = f.text_field :email, :size => 30
  %hr.space
  .span-5
    Phone number
  .span-18
    = f.text_field :phone_number, :size => 30
  %hr.space	
  
  %h3 Company
  .span-5
    Company name
  %br
  .span-18
    = f.text_field :company_name, :size => 30
  %hr.space
  .span-5
    Job title
  %br
  .span-18
    = f.text_field :job_title, :size => 30
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-2.prepend-5
    = f.submit 'add'
   
