
<div class="outer"> 
    <%= image_tag 'distributed.png', :style => "no-repeat -516px -502px; width: 84px; padding-top: 0px;" %>
</div>
<div class="modal_container">
  <div class="inner">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
    <%= devise_error_messages! %>
    
    <div><%= f.label :first_name %>
    <%= f.text_field :first_name %></div><br />

    <div><%= f.label :last_name %>
    <%= f.text_field :last_name %></div><br />

    <div><%= f.label :username %>
    <%= f.text_field :username %></div><br />

    <div><%= f.label :email %>
    <%= f.email_field :email %></div><br />

    <div><%= f.label :password %>
    <%= f.password_field :password %></div><br />

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div><br />
    
    <div><%= f.label :role %>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize, {:include_blank => true} %></p>

    <div><%= f.submit "Sign up" %></div><br />
  <% end %>

   <div class="extras">
     <%= render :partial => "devise/shared/links" %>
   </div>
  </div>
</div>